<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body style="background-color: rgb(224, 224, 224);">
    <form class="w-50 mx-auto mt-5 border p-3 rounded mb-5 bg-white" action="/add-blog" method="POST">
        <!-- 2 column grid layout with text inputs for the first and last names -->

        <div class="mx-auto ">
            <div class="col mb-5 d-flex justify-content-between" >
                <h1>Add Blog</h1>
                <a href="/show-blogs" class="btn btn-secondary p-3 ">Show Blogs</a>
            </div>
          <div class="col">
            <div class="form-outline">
                <label class="form-label" for="form6Example1">First name</label>
              <input type="text" id="form6Example1" name="fname" class="form-control" />
            </div>
          </div>
          <div class="col">
            <div class="form-outline">
              <label class="form-label" for="form6Example2">Last name</label>

              <input type="text" id="form6Example2" name="lname" class="form-control" />
            </div>
          </div>
        </div>
      
        <!-- Text input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example3">Blog Title</label>

          <input type="text" id="form6Example3" class="form-control" name="title" />
        </div>
      
        <!-- Text input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example4">Images Links</label>

          <input type="text" id="form6Example4" class="form-control mb-2" name="image1" / placeholder="Link-1">
          <input type="text" id="form6Example4" class="form-control mb-2" name="image2" / placeholder="Link-2">
          <input type="text" id="form6Example4" class="form-control mb-2" name="image3" / placeholder="Link-3">
          <input type="text" id="form6Example4" class="form-control mb-2" name="image4" / placeholder="Link-4">

        </div>
      
        <!-- Email input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example5">Email</label>

          <input type="email" id="form6Example5" class="form-control" name="email"/>
        </div>
      
        <!-- Message input -->
        <div class="form-outline mb-4">
          <label class="form-label" for="form6Example7">Blog Information</label>

          <textarea class="form-control" id="form6Example7" rows="4" name="content"></textarea>
        </div>
      
      
        <!-- Submit button -->
        <button type="submit" class="btn btn-primary btn-block mb-4">Create Blog</button>
      </form>
    
</body>
</html>